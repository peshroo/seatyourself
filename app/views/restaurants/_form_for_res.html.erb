<h1>Create a Reservation</h1>
<%= form_for @reservation do |f| %>

<div class="field">
  <%= f.label :date %>
  <%= f.text_field :date %>
</div>

<div class="field">
  <%= f.label :time %>
  <%= f.number_field :time %>
</div>

  <div class="field">
    <%= f.label :party_size %>
    <%= f.number_field :party_size %>
  </div>

  <%= f.submit 'Reserve' %>

<% end %>
